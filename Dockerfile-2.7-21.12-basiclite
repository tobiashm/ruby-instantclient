# syntax=docker/dockerfile:1

FROM ruby:2.7-slim
LABEL maintainer="tobias.michaelsen@gmail.com"

ENV ORACLE_HOME="/usr/lib/oracle/21.12/client64"
ENV LD_LIBRARY_PATH="$ORACLE_HOME/lib"
ENV PATH="$PATH:$ORACLE_HOME/bin"

COPY \
  vendor/21.12/oracle-instantclient*-basiclite-*.rpm \
  vendor/21.12/oracle-instantclient*-devel-*.rpm \
  vendor/21.12/oracle-instantclient*-sqlplus-*.rpm \
  /tmp/

RUN set -ex && \
  BUILD_PACKAGES='alien build-essential libaio-dev' && \
  apt-get update && \
  apt-get install -y --no-install-recommends $BUILD_PACKAGES libaio1 && \
  for f in /tmp/oracle-*.rpm; do alien -i $f; done && \
  apt-get purge -y --auto-remove $BUILD_PACKAGES && \
  rm -rf /tmp/*.rpm && \
  echo /usr/lib/oracle/21.12/client64/lib > /etc/ld.so.conf.d/oracle-instantclient21.12.conf && \
  ldconfig

CMD ["sh"]
